{
  "name": "590-project-3",
  "version": "1.0.0",
  "description": "Gatcha and Dragons",
  "main": "./server/app.js",
  "repository": "https://github.com/mfasman95/590-project-3.git",
  "author": "Matthew Fasman <mfasman95@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./server/app.js",
    "dev": "concurrently \"yarn server:dev\" \"yarn client:dev\"",
    "server:dev": "nodemon ./server/app.js",
    "client:dev": "node ./scripts/client-start.js",
    "client:build": "node ./scripts/client-build.js",
    "pretest": "eslint ./src --fix",
    "test": "echo \"Tests complete\"",
    "postinstall": "echo \"Done Installing...\""
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "cross-env": "^5.1.1",
    "express": "^4.16.2",
    "lodash": "^4.17.4",
    "socket.io": "^2.0.4",
    "xxhashjs": "^0.2.1"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "nodemon": "^1.12.1",
    "yarn": "^1.3.2"
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "rules": {
      "no-underscore-dangle": "off",
      "no-plusplus": "off"
    }
  },
  "nodemonConfig": {
    "watch": [
      "server/*"
    ]
  }
}
